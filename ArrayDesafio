
import java.util.Scanner;
	
public class ArrayDesafio {

    public static void main(String[] args){
        
        Scanner entrada = new Scanner(System.in);      
             
        System.out.print("Entre com a quantidade de notas :");
        
        int qtdeDeNotas = entrada.nextInt();
        
        double[] notas = new double[qtdeDeNotas];
        
        // entrada de dados        
        for(int i = 0; i < notas.length; i++){
            System.out.println("Entre com a " + (i+1) + "a nota :");
            notas[i] = entrada.nextDouble();
        }
        
        // calculo da media
        double total = 0.0;
                
        for(double n: notas){
            total += n;
        }
        
        double media = total / notas.length;
        
        //exibindo o array
        for(double n: notas){
            System.out.print( n + "   ");
        }
        
        // exibindo a media
        System.out.println("\nMÃ©dia :" + media);
        
        entrada.close();
 
    }
    
}



